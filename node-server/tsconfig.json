{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@main/*": [
        "./main/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "lib": [
    "es2020"
  ],
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js",
    "src/test"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
