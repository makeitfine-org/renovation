<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="Kores" id="create_work_table" context="dll">
        <createTable tableName="work">
            <column autoIncrement="true" name="id" type="bigserial">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(120)"/>
            <column name="desc" type="VARCHAR(480)"/>
            <column name="end_date" type="date"/>
            <column name="price" type="float"/>
            <column name="pay_date" type="date"/>
        </createTable>
    </changeSet>

    <changeSet author="Kores" id="fill_work_table" context="dll">
        <sqlFile path="sql/fill_work_table.sql" splitStatements="false" relativeToChangelogFile="true"/>
    </changeSet>
</databaseChangeLog>
