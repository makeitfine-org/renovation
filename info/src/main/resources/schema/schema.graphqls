type Query {
    details(filter: DetailsFilter): [Details]
}

type Mutation {
    details(detailsInput: DetailsInput): Details
}

type Details {
    id: String
    name: String
    surname: String
    age: Age
    gender: Gender
}

input DetailsInput {
    name: String
    surname: String
    age: Age
    gender: Gender
}

input DetailsFilter {
    name: String
    surname: String
    age: Age
    gender: Gender
}

scalar Age

enum Gender {
    Male, Female
}